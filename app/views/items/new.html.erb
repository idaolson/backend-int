<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %><br></div>
<% end %>
  
<h2>Create a new item:</h2>

<%= form_with url: items_path, method: :post, local: true do |f| %>
  <%= f.label :title, "Item title:" %>
  <%= f.text_field :title %><br><br>
  <%= f.label :description, "Item description:" %>
  <%= f.text_area :description %><br><br>
  <%= f.label :unit_price, "Price per unit:" %>
  <%= f.number_field :unit_price, :step => 0.01 %><br><br>
  <%= f.label :stock, "Quantity in stock:" %>
  <%= f.number_field :stock, min: 0 %><br><br>
  <%= f.submit "Create item" %><br><br>
<% end %>    


