<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %><br></div>
<% end %>

<h2>Shipment Details:</h2>

<%= @shipment.customer_name %><br>
<%= @shipment.email %><br>

<h2>Shipment items:</h2>

<% @shipment_items.each do |si| %>
  <div id="si-<%= si.id %>">
    <%= si.item[:title] %><br>
    Unit Price: <%= si.unit_price %><br>
    Quantity: <%= si.quantity %><br><br>
  </div>
<% end %> 

<h2>Add items:</h2>

<% @items.each do |item| %>
  <div id="item-<%= item.id %>">
    <%= link_to item.title, item_path(item) %><br>
    Description: <%= item.description %><br>
    Unit Price: <%= item.unit_price %><br>
    In Stock: <%= item.stock %><br>
      <%= form_with url: shipment_items_path, method: :post, local: true do |f| %>
        <%= f.label :quantity, "Quantity:" %>
        <%= f.number_field :quantity, in: 0..item.stock %>
        <%= f.hidden_field :unit_price, value: item.unit_price %>
        <%= f.hidden_field :item_id, value: item.id %>
        <%= f.hidden_field :shipment_id, value: @shipment.id %>
        <%= f.submit "Add to shipment" %><br><br>
      <% end %> 
  </div>
<% end %>

